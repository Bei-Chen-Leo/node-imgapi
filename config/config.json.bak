{
  "redis": {
    "host": "localhost",
    "port": 6379,
    "password": "",
    "db": 0,
    "reconnect": {
      "maxRetries": 5,
      "retryInterval": 8000,
      "connectTimeout": 10000
    }
  },
  "server": {
    "http_port": 3000,
    "https_port": 3001,
    "ssl": {
      "enabled": true,
      "cert": "./ssl/fullchain.pem",
      "key": "./ssl/privkey.pem"
    },
    "workers": 4,
    "cors": {
      "enabled": true,
      "origins": "*",
      "methods": "GET, POST, PUT, DELETE, OPTIONS",
      "headers": "Content-Type, Authorization"
    }
  },
  "paths": {
    "images": "./img",
    "html": "./public"
  },
  "update": {
    "hours": 24,
    "supportedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp", ".svg"]
  },
  "cache": {
    "enabled": true,
    "ttl": 3600,
    "redis_ttl": 7200,
    "map_cleanup_interval": 60000
  },
  "rate_limit": {
    "enabled": false,
    "window_size": 60000,        
    "requests_per_minute": 20,     
    "max_clients": 100,            
    "cleanup_interval": 60000,     
    "ban_duration": 300000
},
  "timezone": "Asia/Shanghai",
  "logging": {
    "enabled": true,
    "level": "INFO",
    "levels": {
      "ERROR": 0,
      "WARN": 1,
      "INFO": 2,
      "DEBUG": 3
    },
    "buffer": {
      "size": 1000,
      "flush_interval": 5000
    }
  }
}